@model List<FethiTekyaygilWebsite.Data.Models.ResponseModels.HobbyModels.HobbyResponseModel>
@{
    Layout = null;
}


<div id="carouselExampleCaption" class="carousel slide" data-ride="carousel" data-interval="false" style="margin:0 auto">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i == 0)
            {
                <li data-target="#carouselExampleCaption" data-slide-to="@i" class="active"></li>
            }
            else
            {
                <li data-target="#carouselExampleCaption" data-slide-to="@i"></li>
            }
        }
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/Media/AboutMe/bg.jpg" class="d-block" alt="..." style="background-color:rgb(118, 112, 112);opacity:0;height:20%">
            <div class="carousel-caption" style="color:black">
                <h5 style="font-size:3vw;">@Html.Raw(FethiTekyaygilWebsite.Data.Language.LanguageDictionary.GetString("HobbyNavigator"))</h5>
            </div>
        </div>
        @foreach (var hobby in Model)
        {
            <div class="carousel-item">
                @*<div data-vide-bg="@Url.Content(hobby.VideoName)" data-vide-options="loop: true, muted: true, position: 100% 100%,resizing:true"></div>*@
                @*<img src="..." class="d-block w-100" alt="...">*@
                <video class="d-block w-100 h-75" src="@Url.Content(hobby.VideoName)" id="video" loop autoplay muted width="100%"></video>

                <div class="carousel-caption" style="color:wheat">
                    <h5 style="font-size:3vw;"><u>@hobby.Name</u></h5>
                    <p style="font-size:4vw">@hobby.Explanation</p>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaption" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color:rgb(51, 181, 229);"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaption" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true" style="background-color:rgb(51, 181, 229);"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
