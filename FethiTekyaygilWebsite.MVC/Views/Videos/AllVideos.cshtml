@model FethiTekyaygilWebsite.MVC.Model.VideoModels.AllVideosModel

@{
    Layout = "~/Views/Shared/_VideoLayout.cshtml";

    int lowerLimit = Model.Page * 20;
    int upperLimit = (Model.Page + 1) * 20;
}


<main id="content">
    <div class="bg-gray-1100">
        <div class="container px-md-6">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb dark font-size-1">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Videos")" class="text-gray-1300">@Localizer["VideoIndex"]</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">@Localizer["AllVideos"]</li>
                </ol>
            </nav>
            <div class="row">
                <div class="col-lg-auto d-none d-xl-block">
                    <div class="w-md-352rem space-bottom-2">
                        <div class="bg-gray-3100 px-3 pt-4 pb-6 mb-4">
                            <div class="mx-1">
                                <form class="input-group input-group-merge mb-3 pb-1" action="@Url.Action("AllVideos","Videos")">
                                    <input type="search" class="form-control font-size-1 font-secondary bg-gray-3800 border-gray-3800 rounded-0" name="Name" placeholder="Search..." aria-label="Search an app" aria-describedby="searchApp">
                                    <div class="input-group-append">
                                        <button type="submit" style="background-color:transparent;border:0px">
                                            <span class="input-group-text" id="searchApp">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18">
                                                    <path fill="rgb(151,151,159)" d="M7 0C11-0.1 13.4 2.1 14.6 4.9 15.5 7.1 14.9 9.8 13.9 11.4 13.7 11.7 13.6 12 13.3 12.2 13.4 12.5 14.2 13.1 14.4 13.4 15.4 14.3 16.3 15.2 17.2 16.1 17.5 16.4 18.2 16.9 18 17.5 17.9 17.6 17.9 17.7 17.8 17.8 17.2 18.3 16.7 17.8 16.4 17.4 15.4 16.4 14.3 15.4 13.3 14.3 13 14.1 12.8 13.8 12.5 13.6 12.4 13.5 12.3 13.3 12.2 13.3 12 13.4 11.5 13.8 11.3 14 10.7 14.4 9.9 14.6 9.2 14.8 8.9 14.9 8.6 14.9 8.3 14.9 8 15 7.4 15.1 7.1 15 6.3 14.8 5.6 14.8 4.9 14.5 2.7 13.6 1.1 12.1 0.4 9.7 0 8.7-0.2 7.1 0.2 6 0.3 5.3 0.5 4.6 0.9 4 1.8 2.4 3 1.3 4.7 0.5 5.2 0.3 5.7 0.2 6.3 0.1 6.5 0 6.8 0.1 7 0ZM7.3 1.5C7.1 1.6 6.8 1.5 6.7 1.5 6.2 1.6 5.8 1.7 5.4 1.9 3.7 2.5 2.6 3.7 1.9 5.4 1.7 5.8 1.7 6.2 1.6 6.6 1.4 7.4 1.6 8.5 1.8 9.1 2.4 11.1 3.5 12.3 5.3 13 5.9 13.3 6.6 13.5 7.5 13.5 7.7 13.5 7.9 13.5 8.1 13.5 8.6 13.4 9.1 13.3 9.6 13.1 11.2 12.5 12.4 11.4 13.1 9.8 13.6 8.5 13.6 6.6 13.1 5.3 12.2 3.1 10.4 1.5 7.3 1.5Z"></path>
                                                </svg>
                                            </span>
                                        </button>
                                    </div>
                                </form>
                                <div class="mb-3">
                                    <h6 class="font-size-18 text-white font-weight-medium border-bottom border-gray-3700 pb-2 mb-4">@Localizer["FilterByCommunity"]</h6>
                                    <ul class="list-unstyled d-flex flex-wrap mb-0">
                                        @foreach (var community in Model.Communities)
                                        {
                                            <li class="pr-1 pb-1">
                                                <a class="h-bg-3 bg-gray-5100 d-flex align-items-center justify-content-center text-center" href="@Url.Action("AllVideos","Videos",new {CommunityID=community.ID})" style="height:6.212rem;width:6.250rem">
                                                    <div class="text-lh-1">
                                                        <div class="font-size-21 font-weight-semi-bold letter">@community.Name</div>
                                                    </div>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                                <div class="mb-3">
                                    <h6 class="font-size-18 text-white font-weight-medium border-bottom border-gray-3700 pb-2 mb-4">@Localizer["FilterByShow"]</h6>
                                    <ul class="list-unstyled d-flex flex-wrap mb-0">
                                        @foreach (var show in Model.Shows)
                                        {
                                            <li class="pr-1 pb-1">
                                                <a class="h-bg-3 bg-gray-5100 d-flex align-items-center justify-content-center text-center" href="@Url.Action("AllVideos","Videos",new {ShowID=show.ID})" style="height:6.212rem;width:6.250rem">
                                                    <div class="text-lh-1">
                                                        <div class="font-size-21 font-weight-semi-bold letter">@show.Name</div>
                                                    </div>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg">
                    <section class="pt-5">
                        <div class="mb-4">
                            <div class="home-section mb-5">
                                <header class="d-md-flex align-items-center justify-content-between mb-3 mb-lg-1 pb-2 w-100 border-bottom border-gray-3900">
                                    <h6 class="d-block position-relative font-size-24 font-weight-medium overflow-md-hidden m-0 text-white">@Localizer["AllVideos"]</h6>
                                </header>
                            </div>
                        </div>
                        <div class="tab-content dark mb-4">
                            <div class="tab-pane fade show active" id="pills-one-example1" role="tabpanel" aria-labelledby="pills-one-example1-tab">
                                <div class="border-bottom border-gray-3800 mb-4 pb-5">
                                    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 mx-n2">
                                        @foreach (var episode in Model.Episodes)
                                        {
                                            <div class="col px-2">
                                                <div class="product mb-4 mb-md-0 ">
                                                    <div class="product-image mb-2">
                                                        <a class="d-block position-relative stretched-link" href="@Url.Action("Episode","Videos",new { ID=episode.ID})">
                                                            <img class="img-fluid" src="@episode.ThumbnailUrl" alt="@episode.Name" style="width:183px;height:77px">
                                                        </a>
                                                    </div>
                                                    <div class="product-meta font-size-12">
                                                        <span><a href="@Url.Action("AllVideos","Videos",new { CommunityID=episode.CommunityID})" class="h-g-primary" tabindex="0">@episode.CommunityName</a></span>
                                                        <span><a href="@Url.Action("AllVideos","Videos",new { ShowID=episode.ShowID})" class="h-g-primary" tabindex="0">@episode.ShowName</a></span>
                                                    </div>
                                                    <h6 class="font-size-1 font-weight-bold mb-0 product-title d-inline-block">
                                                        <a href="@Url.Action("Episode","Videos",new { ID=episode.ID})">@episode.Name</a>
                                                    </h6>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-md-flex align-items-center justify-content-between">
                            <div class="font-secondary font-size-1 font-weight-normal text-gray-1300 text-center text-md-left mb-3 mb-md-0">@lowerLimit - @upperLimit / @Model.Episodes.Count()</div>
                            <nav aria-label="Page navigation example">
                                <ul class="pagination custom-pagination-dark justify-content-center justify-content-md-start mb-0">
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    @for (int i = 0; i < Model.Episodes.Skip(20).Take(10).Count(); i++)
                                    {
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    }

                                    @if (Model.Episodes.Count() > 20)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("AllVideos", "Videos", new { Page = Model.Page + 1})">Next Page<i class="fas fa-long-arrow-alt-right ml-2 font-size-11"></i></a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>